@* Usage: <MealCategoryChip Label="Breakfast" ImageUrl="..." Active="true" OnClick="..."/> *@
<div class="meal-chip-figure @(Active ? "active" : null)"
     role="button" tabindex="0"
     @onclick="OnClick">
  <div class="chip-image">
    @if (!string.IsNullOrWhiteSpace(ImageUrl))
    {
      <img src="@ImageUrl" alt="" />
    }
  </div>

  <div class="chip-base">
    <span class="label">@Label</span>
  </div>
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string? ImageUrl { get; set; }
    [Parameter] public bool Active { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }

    private readonly Dictionary<string, string> CategoryImages = new()
    {
        // ⬇️ Update file names to match what you actually saved
        { "Breakfast", "images/categories/breakfast.svg" },
        { "Lunch",     "images/categories/lunch.svg" },
        { "Dinner",    "images/categories/dinner.svg" },
        { "Snack",     "images/categories/snack.svg" },
    };
}

<style>
/* ===== Pixel-perfect Figma spec ===== */
.meal-chip-figure{
  position: relative;
  width: 74px;
  height: 80px;
  display: flex;                 /* was inline-flex */
  align-items: flex-end;         /* ⬅️ puts the base at the bottom */
  justify-content: center;       /* center horizontally */
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.chip-image{
  position: absolute;
  top: 0;                    /* sits at very top of the 80px figure */
  left: 50%;
  transform: translateX(-50%);
  width: 50px;               /* circle 50x50 */
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  background: #222;          /* fallback color behind image */
  border: none;
}
.chip-image img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.chip-base{
  width: 74px;
  height: 50px;              /* base 74x50 */
  background: #1E1E1E;       /* fill */
  border-radius: 3px;        /* 3px corner radius */
  border: 1px solid rgba(30,30,30,.12);
  display: flex;
  align-items: flex-end;     /* label sits 8px from bottom */
  justify-content: center;   /* centered text */
  box-sizing: border-box;
}

/* Use a local label class (don’t rely on global .caption to avoid margins) */
.meal-chip-figure .label{
  font-family: 'Roboto', sans-serif; /* caption style */
  font-size: 14px;
  font-weight: 300;
  color: #F2F2F2;
  margin-bottom: 8px;        /* 8px above bottom of rectangle */
  line-height: 1;
  white-space: nowrap;
}

/* States */
.meal-chip-figure.active .chip-base{
  border-color: #B1A8FF;     /* lilac highlight when active */
}
.meal-chip-figure.active .chip-image{
  box-shadow: 0 0 0 2px #B1A8FF inset;
}

/* (Nice but subtle) press feedback */
.meal-chip-figure:active { transform: scale(0.98); }
</style>