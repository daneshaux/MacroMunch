@page "/home"
@using System.Text.Json
@using Microsoft.JSInterop
@inject IJSRuntime JS
@inject MacroMunch.Services.ApiService ApiService



<div class="header-bar-home">
    <img src="@headerAvatarUrl" alt="User profile" class="profile-pic" />
    <h3 class="h5 header-title">Home</h3>
</div>

<div class="app-wrapper">
    <div class="home-container">

        @if (isLoading)
        {
            <!-- ‚è≥ Loading state -->
            <div class="empty-state">
                <p class="h5 loading-text">‚ú® Preparing your plan‚Ä¶</p>
            </div>
        }
        else if (mealPlan == null || mealPlan.Count == 0)
        {
            <!-- ü©µ Empty state -->
            <div class="empty-state">
                <h2 class="h2">Hi @userFirstName,</h2>
                <p class="h5">You haven‚Äôt created a meal plan yet!</p>
                <button class="primary-btn" @onclick="CreateMealPlan">
                    Create my meal plan
                </button>
            </div>
        }
        else
        {
            <!-- üçΩÔ∏è Populated meal plan -->
            <div class="welcome-section">
                <div class="welcome-header">
                    <div>
                        <h2 class="h2">Hi @userFirstName,</h2>
                        <p class="h5">Enjoy your meal plan!</p>
                    </div>
                    <button class="new-plan-btn" @onclick="GoToSetup">‚Üª New Plan</button>
                </div>

                @if (mealPlan.Any())
                {
                    <div class="summary-header">
                        <h6 class="h6">Daily Summaries</h6>
                        <span class="kcal-total">@($"{totalCalories:N0} kcal")</span>
                    </div>
                }

                <div class="summary-row">
                    <div class="summary-card">
                        <div class="h6 bold">@proteinTotal g</div>
                        <div class="caption">Protein</div>
                    </div>
                    <div class="summary-card">
                        <div class="h6 bold">@carbsTotal g</div>
                        <div class="caption">Carbs</div>
                    </div>
                    <div class="summary-card">
                        <div class="h6 bold">@fatTotal g</div>
                        <div class="caption">Fat</div>
                    </div>
                </div>
            </div>

            <div class="meal-cards">
                @foreach (var meal in mealPlan)
                {
                    <div class="meal-card" @onclick="@(() => OpenMeal(meal))">
                        <div class="meal-top-row">
                            <span class="meal-type">@meal.Type</span>

                            <div class="meta-col">
                                <span class="calories">@meal.Calories kcal</span>
                                <div class="tag-row">
                                    @foreach (var t in GetDisplayTags(meal))
                                    {
                                        <span class="tag @t.cls">@t.tag</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <img src="@meal.ImageUrl" alt="@meal.Name" class="meal-image" />

                        <div class="meal-name h5">@meal.Name</div>

                        <div class="macro-row">
                            <div class="macro-group">
                                <span>@meal.Protein g</span>
                                <span>Pro</span>
                            </div>
                            <div class="macro-group">
                                <span>@meal.Carbs g</span>
                                <span>Carb</span>
                            </div>
                            <div class="macro-group">
                                <span>@meal.Fat g</span>
                                <span>Fat</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    </div>

@if (selectedMeal != null)
{
    <div class="meal-overlay" @onclick="CloseMeal">
        <div class="meal-sheet" @onclick:stopPropagation>
            <h3 class="h4">@selectedMeal.Name</h3>
            <p class="caption">@selectedMeal.Calories kcal ‚Ä¢ @selectedMeal.Protein g protein</p>

            <h4 class="h6" style="margin-top:16px;">Ingredients</h4>
            <ul class="ingredient-list">
                @foreach (var ing in selectedMeal.Ingredients)
                {
                    <li>@ing</li>
                }
            </ul>

            <button class="primary-btn" style="margin-top:16px;" @onclick="CloseMeal">
                Close
            </button>
        </div>
    </div>
}

<div class="nav-wrapper">
  <div class="bottom-nav">
    <img src="images/icons/recipes.svg" alt="Recipes"
         class="@RecipesClass" @onclick="GoRecipes" />

    <img src="images/icons/home.svg" alt="Home"
         class="@HomeClass" @onclick="GoHome" />

    <img src="images/icons/profile.svg" alt="Profile"
         class="@ProfileClass" @onclick="GoProfile" />
  </div>
</div>


@code {
    private string? jwtToken;  // will be loaded from localStorage

    private List<Meal> mealPlan = new();
    private bool isLoading = true;

    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private string activePage = "home";

    string HomeClass => activePage == "home" ? "nav-icon active" : "nav-icon";
    string RecipesClass => activePage == "recipes" ? "nav-icon active" : "nav-icon";
    string ProfileClass => activePage == "profile" ? "nav-icon active" : "nav-icon";

    void GoRecipes() => NavigationManager.NavigateTo("/recipes");
    void GoHome() => NavigationManager.NavigateTo("/home");
    void GoProfile() => NavigationManager.NavigateTo("/profile");

    void SetActivePage(string page)
    {
        activePage = page;
        NavigationManager.NavigateTo($"/{page}");
    }

    private string headerAvatarUrl = "images/profile.png";

    private int proteinTotal, carbsTotal, fatTotal, totalCalories;

    private void UpdateTotals()
    {
        proteinTotal = mealPlan.Sum(m => m.Protein);
        carbsTotal   = mealPlan.Sum(m => m.Carbs);
        fatTotal     = mealPlan.Sum(m => m.Fat);
        totalCalories = mealPlan.Sum(m => m.Calories);
    }

    private void GoToSetup()
    {
        NavigationManager.NavigateTo("/setup");
    }

    IEnumerable<(string tag, string cls)> GetDisplayTags(Meal m)
    {
        if (m.DietaryTags?.Any() == true) yield return (m.DietaryTags[0], "diet");
        if (m.StyleTags?.Any() == true)   yield return (m.StyleTags[0],   "style");
        if (!string.IsNullOrWhiteSpace(m.SpiceLevel)) yield return (m.SpiceLevel!, "spice");
    }

    private string userFirstName = "there";

    protected override async Task OnInitializedAsync()
    {
        // 1Ô∏è‚É£ Greeting
        var storedName = await JS.InvokeAsync<string>("localStorage.getItem", "userFirstName");
        if (!string.IsNullOrWhiteSpace(storedName))
        {
            userFirstName = storedName;
        }

        // 2Ô∏è‚É£ Avatar
        var storedAvatar = await JS.InvokeAsync<string>("localStorage.getItem", "userAvatarUrl");
        if (!string.IsNullOrWhiteSpace(storedAvatar))
            headerAvatarUrl = storedAvatar;

        // 3Ô∏è‚É£ Has this user finished dietary onboarding yet?
        var dietFlag = await JS.InvokeAsync<string>("localStorage.getItem", "dietOnboardingCompleted");

        if (dietFlag == "true")
        {
            // ‚úÖ Only load meal plan if they‚Äôve completed dietary preferences at least once
            var mealPlanJson = await JS.InvokeAsync<string>("localStorage.getItem", "mealPlan");

            if (!string.IsNullOrWhiteSpace(mealPlanJson))
            {
                try
                {
                    var options = new JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    };

                    mealPlan = JsonSerializer.Deserialize<List<Meal>>(mealPlanJson, options) ?? new();
                    UpdateTotals();
                }
                catch (Exception ex)
                {
                    Console.WriteLine("Failed to parse meal plan JSON: " + ex.Message);
                }
            }
        }
        else
        {
            // ‚ùå No dietary onboarding yet ‚Üí keep mealPlan empty ‚Üí show empty state UI
            mealPlan = new List<Meal>();
            proteinTotal = carbsTotal = fatTotal = totalCalories = 0;
        }

        // 4Ô∏è‚É£ Supabase JWT ‚Üí call Vishesh‚Äôs API for macros
        jwtToken = await JS.InvokeAsync<string>("localStorage.getItem", "supabaseJwt");
        if (string.IsNullOrWhiteSpace(jwtToken))
        {
            Console.WriteLine("No Supabase JWT found in localStorage ‚Äì user might not be logged in via Supabase.");
            isLoading = false;
            StateHasChanged();
            return;
        }

        try
            {
                var macroResult = await ApiService.CalculateMacrosAsync(jwtToken);

                if (macroResult != null)
                {
                    Console.WriteLine($"‚úÖ API daily calories: {macroResult.Daily_Macros.Calories}");
                    Console.WriteLine($"   Protein: {macroResult.Daily_Macros.Protein} g");
                    Console.WriteLine($"   Carbs  : {macroResult.Daily_Macros.Carbs} g");
                    Console.WriteLine($"   Fat    : {macroResult.Daily_Macros.Fat} g");

                    proteinTotal  = (int)Math.Round(macroResult.Daily_Macros.Protein);
                    carbsTotal    = (int)Math.Round(macroResult.Daily_Macros.Carbs);
                    fatTotal      = (int)Math.Round(macroResult.Daily_Macros.Fat);
                    totalCalories = macroResult.Daily_Macros.Calories;
                }
                else
                {
                    Console.WriteLine("CalculateMacrosAsync returned null.");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("‚ùå Error calling CalculateMacrosAsync: " + ex.Message);
            }
        isLoading = false;
        StateHasChanged();
    }
    private void CreateMealPlan()
    {
        NavigationManager.NavigateTo("/setup");
    }

    public class Meal
    {
        public string Type { get; set; } = "";
        public string ImageUrl { get; set; } = "";
        public string Name { get; set; } = "";
        public int Calories { get; set; }
        public int Protein { get; set; }
        public int Carbs { get; set; }
        public int Fat { get; set; }

        public List<string> DietaryTags { get; set; } = new();
        public List<string> StyleTags { get; set; } = new();
        public string? SpiceLevel { get; set; }

        public List<string> Ingredients { get; set; } = new();
    }

    private Meal? selectedMeal;

    private void OpenMeal(Meal meal)
    {
        selectedMeal = meal;
    }

    private void CloseMeal()
    {
        selectedMeal = null;
    }
}

